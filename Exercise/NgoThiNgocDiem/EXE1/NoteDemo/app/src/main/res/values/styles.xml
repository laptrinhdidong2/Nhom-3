<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="pageBackground" >@style/page_background_light</item>
        <item name="textColor"> @style/text_color_light</item>
    </style>



    <!-- Dark -->
    <style name="page_background_dark">
        <item name="android:background">#000</item>
    </style>

    <style name="text_color_dark">
        <item name="android:textColor">#000</item>
    </style>


    <style name="background_list_dark" parent="CardView">
        <item name="cardBackgroundColor">#fff</item>
    </style>

    <!-- Light -->
    <style name="page_background_light">
        <item name="android:background">#fff</item>
    </style>

    <style name="text_color_light">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="background_list_light" parent="CardView">
        <item name="cardBackgroundColor">#000</item>
    </style>




</resources>
