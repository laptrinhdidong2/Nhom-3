<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Light Theme -->

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="pageBackground" >@style/page_background_light</item>
        <item name="textColor"> @style/text_color_light</item>
        <item name="listBackground">@style/background_list_light</item>
    </style>

    <!-- Dark theme  -->
    <style name="MyTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="pageBackground" >@style/page_background_dark</item>
        <item name="textColor"> @style/text_color_dark</item>
        <item name="listBackground">@style/background_list_dark</item>
    </style>
</resources>