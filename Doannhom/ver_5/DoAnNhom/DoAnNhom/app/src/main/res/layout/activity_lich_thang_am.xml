<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen21"
    android:orientation="vertical"
    tools:context=".ActivityLichThangAm">


    <TextView
        android:id="@+id/tvNgayThangNamDuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/mauso_lich"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LỊCH ÂM"
        android:gravity="center"
        android:textColor="@color/mauso_lich"
        android:textSize="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <RelativeLayout
            android:id="@+id/layoutngay"
            android:layout_width="@dimen/layout_width_date"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/lbngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGÀY"
                android:textSize="18dp"
                android:textColor="@color/mauso_lich"
                android:gravity="center"
                android:layout_margin="@dimen/margin_label"

                />

            <TextView
                android:id="@+id/tvNgayAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                android:textColor="@color/mauso_lich"
                android:layout_margin="@dimen/margin_label"
                android:layout_below="@id/lbngay"
                android:textSize="@dimen/textsize_ngayduong"
                />

            <TextView
                android:id="@+id/tvCanChiNgayAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhâm Tuất"
                android:textColor="@color/mauso_lich"
                android:gravity="center"
                android:layout_below="@id/tvNgayAm"
                android:textSize="@dimen/textsize_datelicham"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutthang"
            android:layout_toRightOf="@id/layoutngay"
            android:layout_width="@dimen/layout_width_date"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_thang"
            android:layout_marginRight="@dimen/margin_right_thang"
            >

            <TextView
                android:id="@+id/lbthang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÁNG"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/mauso_lich"
                android:layout_margin="@dimen/margin_label"

                />

            <TextView
                android:id="@+id/tvThangAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:gravity="center"
                android:textColor="@color/mauso_lich"
                android:layout_margin="@dimen/margin_label"
                android:layout_below="@id/lbthang"
                android:textSize="@dimen/textsize_ngayduong"

                />

            <TextView
                android:id="@+id/tvCanChiThangAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhâm Tuất"
                android:gravity="center"
                android:textColor="@color/mauso_lich"
                android:layout_below="@id/tvThangAm"
                android:textSize="@dimen/textsize_datelicham"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/layoutthang"
            android:layout_width="@dimen/layout_width_date"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/lbnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NĂM"
                android:textSize="18dp"
                android:textColor="@color/mauso_lich"
                android:gravity="center"
                android:layout_margin="@dimen/margin_label"

                />

            <TextView
                android:id="@+id/tvNamAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020"
                android:gravity="center"
                android:textColor="@color/mauso_lich"
                android:layout_margin="@dimen/margin_label"
                android:layout_below="@id/lbnam"
                android:textSize="@dimen/textsize_ngayduong"
                />

            <TextView
                android:id="@+id/tvCanChiNamAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvNamAm"
                android:gravity="center"
                android:text="Nhâm Tuất"
                android:textColor="@color/mauso_lich"
                android:textSize="@dimen/textsize_datelicham" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cadao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ca dao tục ngữ"
            android:textColor="@color/mauso_lich"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/imagecadao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_lich"
            android:layout_below="@+id/cadao"/>
        <TextView
            android:layout_below="@id/imagecadao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cadao"
            android:layout_marginTop="20dp"
            android:textColor="@color/mauso_lich"
            android:textSize="18dp"/>
    </RelativeLayout>

</LinearLayout>