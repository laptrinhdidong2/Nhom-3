<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--Set màu nền-->
    <solid
        android:color="#E9D421"/>

    <!--Đặt thuộc tính màu độ rộng và đường viền-->
    <stroke
        android:width="4sp"
        android:color="#FFF"/>

    <!--Các thuộc tính căn chỉnh-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <!--Bán kính đường tròn của 4 góc-->
    <corners
        android:radius="100dp"/>
</shape>