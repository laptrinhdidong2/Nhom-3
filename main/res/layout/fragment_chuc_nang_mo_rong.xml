<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".ChucNangMoRongFragment"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mo_rong"
        android:textColor="#fff"
        android:textSize="@dimen/size_mo_rong"
        android:gravity="center"
        android:layout_weight="1"
        />


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_weight="2"
        android:gravity="top"
        android:background="#fff"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardBamGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"

            ><!--
    card elevation value 30dp and black background
    -->


            <RelativeLayout
                android:id="@+id/layout_BamGio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/imageViewBamGio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/stopwatch" />


                <TextView
                    android:id="@+id/textViewBamGio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewBamGio"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@string/bam_gio"
                    android:textColor="@color/mauso_lich"
                    android:textSize="30sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardDemNguoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            ><!--
    card elevation value 30dp and black background
    -->

            <RelativeLayout
                android:id="@+id/layout_DemNguoc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageViewDemNguoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/time" />


                <TextView
                    android:id="@+id/textViewDemNguoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewDemNguoc"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@string/dem_nguoc"
                    android:textColor="@color/mauso_lich"
                    android:textSize="30sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>




</LinearLayout>